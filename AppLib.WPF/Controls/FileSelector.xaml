<UserControl x:Class="AppLib.WPF.Controls.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppLib.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30"
             d:DesignWidth="300"
             x:Name="Parent"
             MaxHeight="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox
            Margin="2"
            Text="{Binding ElementName=Parent, Path=SelectedFile, Mode=TwoWay}"
            FontSize="16"
            Grid.Column="0"/>
        <Button
            Grid.Column="1"
            x:Name="BtnBrowse"
            Click="BtnBrowse_Click"
            Content="Browse ..."
            Margin="2"
            Padding="5"/>
    </Grid>
</UserControl>
